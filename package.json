{
  "name": "tts-playground",
  "version": "1.0.0",
  "author": "Eric Gottlieb",
  "main": "src",
  "scripts": {
    "start": "parcel -p 8080 src/index.html",
    "dev": "npm start",
    "build": "parcel build src/index.html",
    "format": "./scripts/format.sh",
    "format:validate": "./scripts/format.sh list-different",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' ava"
  },
  "devDependencies": {
    "@babel/core": "7.12.16",
    "@babel/plugin-transform-react-jsx": "7.12.13",
    "@babel/preset-env": "7.12.16",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-hook-names": "1.0.1",
    "browser-env": "3.3.0",
    "parcel-bundler": "1.12.5",
    "parcel-plugin-inliner": "1.0.16",
    "prettier": "2.3.2",
    "stylus": "0.54.7",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "dependencies": {
    "ava": "^3.15.0",
    "preact": "10.5.12"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "tsconfig-paths/register",
      "./test/init.js"
    ],
    "ignoredByWatcher": [
      "dist/**/*",
      ".cache/**/*"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "proseWrap": "always"
  }
}
