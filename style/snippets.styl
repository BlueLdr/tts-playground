.tts-col-snippets
  margin-left 1.5rem
  flex 1 1 25%
  min-width 18rem
  max-width 20rem

.tts-snippets
  .organizer-section-item
    height 2.375rem
    &:nth-child(odd):hover
      background-color $Gray72
    &:nth-child(even)
      background-color $Gray64
  .organizer-list[data-reorder="true"] .organizer-section-item:hover
    background-color $Gray96

  &-section
    &-modal .modal-body
      display flex
      justify-content space-between
      align-items flex-end

    &-modal-input
      display flex
      flex-direction column
      justify-content flex-end
      align-items flex-start
      span
        margin-bottom 0.5rem

    &-add-row
      color $Gray176
      background-color $Gray48
      border 1px dashed $Gray112
      border-radius 6px
      padding 0.25rem 0.75rem
      opacity 0.5
      width calc(100% - 1rem)
      margin 0.5rem
      transition 150ms ease
      transition-property color, opacity

      &:hover
        background-color $Gray48
        opacity 1
      i
        margin-right 0.5rem

      &-item
        width 100%
        justify-content center
        overflow hidden
        transition 200ms ease
        transition-property height, opacity, background-color, border-width
        &.organizer-section-item
          background-color $Gray64
          &:hover
            background-color $Gray72
        .organizer-list[data-reorder="true"] &
          height 0
          opacity 0
          border-width 0
          pointer-events none


    &-edit
      opacity 0.2
      transition 150ms ease
      transition-property color, opacity
      .organizer-section-container:focus-within &,
      .organizer-section-container:hover &
        opacity 1

  &-row
    border 1px solid transparent
    display flex
    justify-content space-between
    align-items center
    position relative
    padding 0 0.25rem
    width 100%
    height 100%

    button
      width 2.25rem
      padding 0.375rem 0.5rem

    .organizer-list[data-reorder="true"] &
      border none
      &-control-add
        display none

    &[data-edit="true"]
      background-color $Gray72
      border-color $Gray160
      border-bottom-color transparent
      border-top-left-radius 4px
      border-top-right-radius 4px
    &-left
      display flex
      justify-content flex-start
      align-items center
    &-input, &-text
      line-height 1.75rem
      width 12rem
      padding 0.125rem 0
    &-text
      .snippet-space-before,
      .snippet-space-after
        opacity 0.25
        transition-property opacity
    &-controls
      height 100%

    &-controls[data-open="false"] &-controls-menu
      display none

    &-controls-menu
      background-color $Gray72
      border 1px solid $Gray160
      border-top-color $Gray96
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
      display flex
      justify-content space-evenly
      align-items center
      position absolute
      width calc(100% + 2px)
      padding 0.25rem
      top 100%
      left -1px
      z-index 100

    &-controls-button
      transition-property background-color, opacity, color
    &-controls-button
      opacity 0
    &-control-add
      opacity 0.4

    &-control-add
      padding 0 0.375rem

    .tts-col-snippets:focus-within &-control-add,
    .tts-col-snippets:hover &-control-add
      opacity 0.6

    &:focus-within &-control-add,
    &:focus-within &-controls-button,
    &:hover &-control-add,
    &:hover &-controls-button,
    &:hover &-text .snippet-space-before,
    &:hover &-text .snippet-space-after
      opacity 1

    &-controls-button
      opacity 0

  &-modal
    &-text
      align-items flex-end

    &-prefix,
    &-suffix,
    &-input
      display flex
      flex-direction column
      justify-content flex-start
      align-items flex-start
      span
        font-size 0.875rem
        margin-bottom 0.5rem

    &-prefix,
    &-suffix
      flex 1 1 4rem
      max-width 4rem
      input
        border 1px solid $Gray144
        max-width 4rem

    &-prefix input
      border-right 1px dashed $Gray112
      border-top-right-radius 0
      border-bottom-right-radius 0
    &-suffix input
      border-left 1px dashed $Gray112
      border-radius 0

    &-input
      width 100%
      flex 1 1 calc(100% - 9rem)
      max-width calc(100% - 9rem)
      input
        font-size 1rem
        border 1px solid $Gray144
        border-left 1px dashed $Gray112
        border-right 1px dashed $Gray112
        border-radius 0
        width 100%
      & ~ button
        border 1px solid $Gray144
        border-left none
        border-top-right-radius 4px
        border-bottom-right-radius 4px
        flex 0 0 auto
        min-width 2rem

    &-prefix input,
    &-suffix input,
    &-input input,
    &-input ~ button
      height 2rem
      display block

    &-prefix,
    &-suffix,
    &-input,
    &-input ~ button
      margin-left 0

    & .tts-submit-status
      height 2rem
      width 3rem
      flex 0 0 3rem
      margin 0

    &-checkbox
      display flex
      justify-content flex-start
      align-items center
      margin-right 1.5rem
      input
        margin-right 0.75rem
    &-count
      display flex
      justify-content flex-start
      align-items center
      input
        background-color $Gray72
        border none
        border-bottom 2px solid $Gray112
        border-radius 0
        margin-right 0.75rem
        max-width 3rem
    & audio::-webkit-media-controls-timeline
      display none !important
    & audio::-webkit-media-controls-current-time-display
      display none !important
    & audio::-webkit-media-controls-time-remaining-display
      display none !important

.snippet
  display flex
  justify-content flex-start
  align-items flex-start
  line-height 1.5em

  &-prefix,
  &-suffix
    opacity 0.6
  &-prefix
    margin-right 0.125rem
  &-suffix
    margin-left 0.125rem

  &-text
    font-weight 600
    margin 0 0.0625em
  &-text-repeats
    margin 0 0.0625em
    display inline-flex
    justify-content flex-start
    align-items center
    &::before,
    &::after
      font-size 0.875em
      opacity 0.5
      vertical-align middle
    &::before
      content "["
    &::after
      content "]"

  &-space-before,
  &-space-after
    width 0.375rem
    border-bottom 1px solid transparent
    height 1.5em
    &[data-show="true"]
      border-bottom-color $Gray128
      background-color rgba($Gray160, 0.5)
  &-space-before
    margin-right 0.125rem
  &-space-after
    margin-left 0.125rem
