*, *::before, *::after
  box-sizing border-box

html, body
  font 16px 'Helvetica Neue', arial, sans-serif
  font-weight 400
  color $Gray248
  background-color $Gray48

body
  margin 0

audio
  border-radius 20px
  width 500px

h1
  text-align center

.header
  background-color $Gray72
  box-shadow 0 2px 5px -3px rgba($Black, .8)
  padding 0.5rem 1rem
  height 3.5rem
  h1, h4
    margin 0
    display inline
  h1
    margin-right 1rem
  h4
    opacity 0.8

.row
  display flex
  justify-content flex-start
  align-items center
  margin 1rem 0

.row:first-child
  margin-top 0

.row:last-child
  margin-bottom 0

.row > *
  margin-left 1rem

.row > :first-child
  margin-left 0


.invisible
  position absolute
  width 1px
  height 1px
  visibility hidden
  opacity 0
  z-index -999
  pointer-events none
  overflow hidden


@keyframes spinner
  0%
    transform rotate(0deg)

  100%
    transform rotate(359.9deg)

