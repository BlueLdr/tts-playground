*, *::before, *::after
  box-sizing border-box

html, body
  font-family 'Roboto', 'Helvetica Neue', arial, sans-serif
  font-size 16px
  font-style normal
  font-weight 400
  color $Gray248
  background-color $Gray48

body
  margin 0

audio
  border-radius 20px
  width 500px
  height 2.5rem

h1
  text-align center

a, .link
  color $Link
  cursor pointer
  &:hover
    color $LinkL

.link
  text-decoration underline

code
  font inherit
  font-family monospace
  font-size-adjust 0.4375
  letter-spacing -0.03rem
  background-color $codeBg
  border 1px solid rgba($BlueD, 0.4)
  border-radius 3px
  display inline
  padding 0.125rem 0.25rem

.header
  background-color $Gray72
  box-shadow 0 2px 5px -3px rgba($Black, .8)
  padding 0.5rem 1rem
  height 3.5rem
  display flex
  justify-content space-between
  align-items center
  h1, h4
    margin 0
    display inline
  h1
    margin-right 1rem
  h4
    opacity 0.8

.row
  display flex
  justify-content flex-start
  align-items center
  margin 1rem 0

.row:first-child
  margin-top 0

.row:last-child
  margin-bottom 0

.row > *
  margin-left 1rem

.row > :first-child
  margin-left 0


.invisible
  position absolute
  width 1px
  height 1px
  visibility hidden
  opacity 0
  z-index -999
  pointer-events none
  overflow hidden
  top 50%
  left 50%

@keyframes spinner
  0%
    transform rotate(0deg)

  100%
    transform rotate(359.9deg)

