button
  cursor pointer
  appearance none
  border none

.btn
  appearance none
  font-size 1rem
  color $Gray232
  background-color $Gray
  border none
  border-radius 4px
  transition background-color 80ms
  display flex
  justify-content center
  align-items center
  padding 0.375rem 1rem

.btn:hover
  background-color $GrayL

.btn:active
  background-color $GrayD

.btn:disabled
  color $Gray160
  background-color $GrayG
  pointer-events none

.btn-large
  padding 1rem 1.5rem;

.btn-primary
  background-color $Blue


.btn-primary:hover
  background-color $BlueL

.btn-primary:active
  background-color $BlueD

.btn-primary:disabled
  background-color $BlueG


.btn-negative
  background-color $Red


.btn-negative:hover
  background-color $RedL

.btn-negative:active
  background-color $RedD

.btn-negative:disabled
  background-color $RedG


.btn-with-icon i
  margin-right 1rem

.btn-with-icon.icon-only i
  margin-right 0


.btn-multi
  display flex
  justify-content center
  align-items center

.btn-left
  border-right 1px solid $Gray64
  border-top-right-radius 0
  border-bottom-right-radius 0
  margin-right 0


.btn-right
  border-top-left-radius 0
  border-bottom-left-radius 0
  margin-left 0


.icon-button
  color $Gray112
  font-size 1.25rem
  background-color transparent
  transition color 100ms ease

.icon-button:hover
  color $Gray160

.icon-button:active
  color $Gray128


.icon-button:disabled
  pointer-events none
  color $Gray64

