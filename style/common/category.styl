.category
  &[data-open="false"]
    border 1px solid #393939
    border-top-color transparent
    border-bottom-color transparent
  &[data-open="true"]
    border 1px solid #666

  &-header
    background-color #393939
    padding 0.5rem
    display flex
    justify-content space-between
    align-items center
    &-controls
      margin-left 0.5rem

  &:first-child,
  &:first-child &-header
    border-top-right-radius 4px
    border-top-left-radius 4px

  &:last-child,
  &:last-child &-header
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px

  &-content
    display contents
  &[data-open="false"] &-content
    display none

  &-title
    appearance none
    background-color transparent
    display flex
    justify-content flex-start
    align-items center
    flex 1 1 auto
    cursor pointer

    span
      color #f6f6f6

  &-expand
    color #666
    font-size 1.25rem
    background-color transparent
    transition color 100ms ease
    width 2rem

  &-title:hover &-expand
    color #999
  &-title:active &-expand
    color #777

  &-title:disabled &-expand
    pointer-events none
    color #444
