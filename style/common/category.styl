.category
  ul
    reset-list()

  &[data-open="false"]
    border 1px solid $Gray48
    border-top-color transparent
    border-bottom-color transparent
  &[data-open="true"]
    border 1px solid $Gray128

  &-header
    background-color $Gray48
    height 2.5rem
    padding 0.5rem 0
    display flex
    justify-content space-between
    align-items center
    &-controls
      margin-left 0.5rem
      button.icon-button
        padding 0.375rem

  &:first-child,
  &:first-child &-header
    border-top-right-radius 4px
    border-top-left-radius 4px

  &:last-child,
  &:last-child &-header
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px

  &-content
    display contents
  &[data-open="false"] &
    &-header
      background-color $Gray64
    &-content
      display none

  &-title
    appearance none
    background-color transparent
    display flex
    justify-content flex-start
    align-items center
    flex 1 1 auto
    cursor pointer
    line-height 2.375rem
    margin -0.5rem 0

    span
      color $Gray248

  &-expand
    color $Gray128
    font-size 1.25rem
    background-color transparent
    transition color 100ms ease
    width 2rem
    button&.icon-button
      width 2.25rem
      height 2.25rem
      padding 0.375rem
      display flex
      justify-content center
      align-items center

  &-title[data-toggle="true"]:hover &-expand,
  &-title[data-toggle="false"] &-expand:hover
    color $Gray176
  &-title[data-toggle="true"]:active &-expand,
  &-title[data-toggle="false"] &-expand:active
    color $Gray144

  &-title[data-toggle="true"]:disabled &-expand,
  &-title[data-toggle="false"] &-expand:disabled
    pointer-events none
    color $Gray72
