.modal
  background-color $Gray48
  border-radius 8px
  box-shadow 2px 4px 8px -3px rgba($Black, 0.8)
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  min-height 10rem
  max-height calc(100% - 2rem)
  min-width 30rem
  max-width calc(100% - 2rem)
  display flex
  flex-direction column
  justify-content space-between
  align-items flex-start

  &-container
    position fixed
    top 0
    left 0
    z-index 99
  &:empty
    display none

  &-backdrop
    background-color rgba(24,24,24,.9)
    position relative
    width 100vw
    height 100vh
    z-index 100

    & + &
      z-index 101
      top -100vh

  &-header,
  &-footer,
  &-body
    padding 1.25rem
    width 100%

  &-header,
  &-footer
    display flex
    justify-content space-between
    align-items center
    flex 0 0 auto
    padding 0.75rem 1.25rem
  &-header
    border-bottom 1px solid $Gray72
    h3
      margin 0
  &-title
    display flex
    justify-content flex-start
    align-items center

  &-body
    flex 1 1 auto

  &-footer
    border-top 1px solid $Gray72


  &-header-tab
    &s
      display flex
      justify-content space-between
      align-items center
      .modal-close
        width 2.5rem

    reset-button-full()
    color $Gray248
    font-size 1rem
    border-right 1px solid $Gray72
    flex 1 1 auto
    text-align center

    &, &s .modal-close
      height 2.5rem
    &:first-child
      border-top-left-radius 8px

    &:hover
    &:focus
      background-color $GrayL

    &:active
      background-color $Gray

    &[data-active="true"]
      background-color $BlueG

  &-scroll-content
    position relative
    overflow-x hidden
    overflow-y auto


