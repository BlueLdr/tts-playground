$InputHeight = 2.25rem

textarea, input
  font-family 'Helvetica Neue', arial, sans-serif
  font-size 1rem
  color $Gray248
  background-color $Gray72
  border-radius 4px
  padding 0.25rem
  &:focus
    background-color $Gray64

textarea
  &.invisible
    visibility visible

  &.clipboard-input
    position fixed
    top 50%

input
  background-color $Gray96
  border 1px solid $Gray128
  padding 0.5rem
  height $InputHeight
  &:focus
    background-color $Gray72
    border-color $Gray160

  &:disabled
    color $Gray160
    background-color $Gray64
    border-color $Gray96

  &[data-invalid="true"]
    border-color $RedD
    outline-color $RedD

select
  cursor pointer

label.checkbox
label.radio-button
  display flex
  justify-content flex-start
  align-items center
  cursor pointer
input[type="checkbox"],
input[type="radio"]
  height auto
  cursor pointer
input[type="checkbox"] + .checkbox-label
input[type="radio"] + .radio-label
  font-size 0.875rem
  margin-left 0.5rem

.checkbox.toggle
  .toggle-switch
    position relative
    cursor pointer
    &:before,
    &:after
      content " "
      display block
      transition 200ms ease-in-out

    &:before
      background-color $Gray96
      border-radius (1.75 / 2)rem
      width 3rem
      height 1.75rem
      z-index 2

    &:after
      background-color $Gray216
      background-clip padding-box
      border-radius (1.75 / 2)rem
      position absolute
      top calc(50%)
      left 0
      transform translate(3px, -50%)
      width calc(1.75rem - 6px)
      height @width
      z-index 3

  input:checked + .toggle-switch
    &:before
      background-color $Green
    &:after
      transform translate(calc(3rem - 3px - 100%), -50%)

  input:active + .toggle-switch
    &:after
      background-color $Gray160

.expandable-checklist
  &-label
    cursor pointer
    list-style-position outside
    .checkbox
      display inline-flex
      padding 0.375rem
      padding-right 0.5rem
      margin -0.25rem 0 -0.25rem -0.375rem

select
  font-family inherit
  padding 0.125rem
