.tts-col-scratch
  margin-left 1rem
  flex 1 1 25%
  min-width 18rem
  max-width 25rem

.tts-col-scratch,
.tts-scratch
  max-height 100%

.tts-scratch
  overflow auto
  padding 0 0.5rem 2rem
  width 100%
  max-height calc(100vh - 3.5rem)

  ul
    list-style none
    margin-left 0
    padding-left 0
    margin-block-start 0
    margin-block-end 0
    padding-inline-start 0

  &-header
    justify-content space-between

  &-section
    &[data-open="false"]
      border 1px solid #393939
      border-top-color transparent
      border-bottom-color transparent
    &[data-open="true"]
      border 1px solid #666

    &-title
      display flex
      justify-content flex-start
      align-items center

    &-header
      background-color #393939
      padding 0.5rem
      display flex
      justify-content space-between
      align-items center

    &:first-child,
    &:first-child &-header
      border-top-right-radius 4px
      border-top-left-radius 4px

    &:last-child,
    &:last-child &-header
      border-bottom-right-radius 4px
      border-bottom-left-radius 4px

    &-modal .modal-body
      display flex
      justify-content space-between
      align-items flex-end

    &-modal-input
      display flex
      flex-direction column
      justify-content flex-end
      align-items flex-start
      span
        margin-bottom 0.5rem

    &[data-open="false"] ul
      display none

    &-title
      appearance none
      background-color transparent
      cursor pointer

      span
        color #f6f6f6

    &-expand
      color #666
      font-size 1.25rem
      background-color transparent
      transition color 100ms ease
      width 2rem

    &-title:hover &-expand
      color #999
    &-title:active &-expand
      color #777

    &-title:disabled &-expand
      pointer-events none
      color #444


    &-add-row
      color #aaa
      background-color #393939
      border 1px dashed #777
      border-radius 6px
      padding 0.25rem 0.75rem
      opacity 0.5
      width calc(100% - 1rem)
      margin 0.5rem

      &:hover
        opacity 1
      i
        margin-right 0.5rem

      &-item.tts-scratch-row
        width 100%
        justify-content center

  &-row
    border 1px solid transparent
    display flex
    justify-content space-between
    align-items center
    position relative
    padding 0 0.25rem
    &:nth-child(odd)
      background-color #444
    &:nth-child(even),
    &:last-child
      background-color transparent

    &[data-edit="true"]
      background-color #444
      border-color #999
      border-bottom-color transparent
      border-top-left-radius 4px
      border-top-right-radius 4px
    &-left
      display flex
      justify-content flex-start
      align-items center
    &-input, &-text
      line-height 1.75rem
      width 12rem
      padding 0.125rem 0.5rem
    &-text-prefix,
    &-text-suffix
      opacity 0.6
    &-text-prefix
      margin-right 0.125rem
    &-text-suffix
      margin-left 0.125rem

    &-controls
      height 100%

    &-controls[data-open="false"] &-controls-menu
      display none

    &-controls-menu
      background-color #444
      border 1px solid #999
      border-top-color #494949
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
      display flex
      justify-content space-evenly
      align-items center
      position absolute
      width calc(100% + 2px)
      padding 0.25rem
      top 100%
      left -1px
      z-index 100

    &-control-add,
    &-controls-button
      opacity 0
      transition-property background-color, opacity, color

    &-control-add
      padding 0 0.375rem

    .tts-col-scratch:focus-within &-control-add,
    .tts-col-scratch:hover &-control-add
      opacity 0.2

    &:focus-within &-control-add,
    &:focus-within &-controls-button,
    &:hover &-control-add,
    &:hover &-controls-button
      opacity 1

    &-controls-button
      opacity 0

  &-modal
    &-text
      align-items flex-end

    &-prefix,
    &-suffix,
    &-input
      display flex
      flex-direction column
      justify-content flex-start
      align-items flex-start
      span
        font-size 0.875rem
        margin-bottom 0.5rem

    &-prefix,
    &-suffix
      flex 1 1 4rem
      max-width 4rem
      input
        border 1px solid $Gray144
        max-width 4rem

    &-prefix input
      border-right 1px dashed $Gray112
      border-top-right-radius 0
      border-bottom-right-radius 0
    &-suffix input
      border-left 1px dashed $Gray112
      border-radius 0

    &-input
      width 100%
      flex 1 1 calc(100% - 9rem)
      max-width calc(100% - 9rem)
      input
        font-size 1rem
        border 1px solid $Gray144
        border-left 1px dashed $Gray112
        border-right 1px dashed $Gray112
        border-radius 0
        width 100%
      & ~ button
        border 1px solid $Gray144
        border-left none
        border-top-right-radius 4px
        border-bottom-right-radius 4px
        flex 0 0 auto

    &-prefix input,
    &-suffix input,
    &-input input,
    &-input ~ button
      height 2rem
      display block

    &-prefix,
    &-suffix,
    &-input,
    &-input ~ button
      margin-left 0

    & .tts-submit-status
      height 2rem
      width 3rem
      flex 0 0 3rem
      margin 0

    &-checkbox
      display flex
      justify-content flex-start
      align-items center
      margin-right 1.5rem
      input
        margin-right 0.75rem
    &-count
      display flex
      justify-content flex-start
      align-items center
      input
        background-color #464646
        border none
        border-bottom 2px solid #666
        border-radius 0
        margin-right 0.75rem
        max-width 3rem
    & audio::-webkit-media-controls-timeline
      display none !important
    & audio::-webkit-media-controls-current-time-display
      display none !important
    & audio::-webkit-media-controls-time-remaining-display
      display none !important
