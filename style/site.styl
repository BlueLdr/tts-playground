.tts-text
  font-family 'Helvetica Neue', arial, sans-serif

.tts-container
  display flex
  justify-content center
  align-items flex-start
  margin 0 1rem
  width calc(100% - 2rem)

.tts-submit-status
  display flex
  justify-content center
  align-items center

.tts-submit-status .fa-circle-notch
  color $statusBlue
  animation spinner 1.5s linear
  animation-iteration-count infinite

.tts-submit-status .fa-check-circle
  color $statusGreen

.tts-submit-status .fa-exclamation-circle
  color $statusRed

.tts-col
  position relative
  max-height 100%
  &-header
    height 3rem
    background-color $Gray48
    justify-content space-between
    position sticky
    top 0
    z-index 2
    &, &.row
      margin 0.75rem 0
    h4
      margin 0
      line-height 2.5rem
      flex 1 1 auto
    &-controls
      display flex
      justify-content flex-end
      align-items center
      .icon-button
        width 2.5rem
        height 2.5rem
      > *
        margin-left 0.5rem
        &:first-child
          margin-left 0

    [data-help-active="true"] &
      position static
      [data-help]
        background-color rgba($Gray160, 0.2)


.tts-messages, .tts-snippets
  overflow auto
  padding 0 0 2rem
  width 100%
  max-height calc(100vh - 3.5rem)

.tts-loading
  width 100vw
  height 100vh
  display flex
  flex-direction column
  justify-content center
  align-items center
  .tts-submit-status
    font-size 8rem
  h2
    font-weight 500

.header
  &-right
    display flex
    flex-direction row-reverse
    justify-content flex-end
    align-items center
    button
      margin-left 0.5rem

  &-button
    font-size 1.25rem
    color $Gray232
    background-color $Gray72
    border 2px solid transparent
    border-radius 4px
    transition background-color 150ms
    display flex
    justify-content center
    align-items center
    padding 0.5rem
    margin-left 0.5rem
    width 2.5rem
    height @width
    &:hover
      background-color $Gray96
    &:active
      background-color $Gray64
    &[data-open="true"]
      border-color $Gray112

.footer
  margin 1rem auto
  > span
    border-right 1px solid $Gray96
    margin 0 1rem

  &-release
    text-decoration none
    > span:first-child
      text-decoration underline
    &-new
      color $Gray48
      font-size 0.75rem
      font-weight 600
      background-color $Link
      border-radius 1rem
      padding 0.125rem 0.375rem
      margin-left 0.25rem
      text-transform uppercase
      display inline-flex
      justify-content center
      align-items center
      position relative
      z-index 2
      i
        font-size 0.625rem
        padding 0 0.125rem
      &:before,
      &:after
        content " "
        border-radius inherit
        display block
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        animation-delay 2s
      &:before
        background-color $LinkL
        opacity 0
        z-index 1
        animation release-new-pulse-ring 50s linear 2s infinite
      &:after
        background-color $White
        opacity 0
        z-index 3
        animation release-new-pulse 50s linear 2s infinite

    &:hover > &-new
      color $Gray48
      background-color $LinkL

@keyframes release-new-pulse
  0%
    opacity 0.4
  0.5%
    opacity 0.4
  1.5%
    opacity 0
  100%
    opacity 0

@keyframes release-new-pulse-ring
  0%
    opacity 0.4
    transform scale(1, 1)
  0.5%
    opacity 0.4
    transform scale(1.3, 1.5)
  1.5%
    opacity 0
    transform scale(1.9, 2.5)
  2%
    opacity 0
    transform scale(1, 1)
  100%
    opacity 0
    transform scale(1, 1)
