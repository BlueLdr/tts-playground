.tts-col-main
  max-width 40rem
  flex 1 1 100%
  display flex
  justify-content space-between
  align-items center
  flex-direction column
  height calc(100vh - 3.5rem)

.tts-header
  &-top
    display flex
    justify-content space-between
    align-items center
    position static
  &-controls
    display flex
    justify-content flex-end
    align-items center
    > *:not(:last-child)
      margin-right 0.75rem

.tts-options
  background-color rgba($Gray64, 0.5)
  border 1px solid $Gray160
  border-bottom none
  border-top-left-radius 4px
  border-top-right-radius 4px
  padding 1rem
  display flex
  justify-content space-between
  align-items center

  &-reset
    font-size 1.25rem
    border 2px solid transparent
    display flex
    justify-content center
    align-items center
    padding 0.5rem

  &-item
    display flex
    justify-content space-between
    align-items flex-start
    flex-direction column
    height 3.25rem
    &:not(:last-child)
      margin-right 1rem

    &-label
      display flex
      justify-content flex-start
      align-items center
      padding 0.125rem 0

    input[type="range"]
      border none
      height 1.5rem
      padding 0 0.5rem
      margin 0


.tts-textarea
  position relative
  &,
  &-container
    max-width 100%
  &-container
    margin-top 0
  & textarea,
  &-preview
    border 1px solid $Gray160
    border-radius 0
    display inline-block
    appearance textfield
    -moz-default-appearance textarea
    margin-block 0
    text-rendering optimizeLegibility
    vertical-align text-bottom
    cursor text
    white-space pre-wrap
    word-wrap break-word
    padding 0.25rem
    text-align initial
    text-indent initial
    text-shadow initial
    text-transform initial
    word-spacing initial
    letter-spacing initial
    inset-block-end 0

  textarea
    background transparent
    border-color transparent
    position relative
    max-width 100%
    min-width 100%
    min-height 10rem
    padding 0.25rem
    z-index 3

  &-preview
    color $Gray160
    background $Gray64
    border-bottom-color $Gray128
    border-top-color $Gray128
    display inline-block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 0.25rem
    z-index 2
    span:first-child
      visibility hidden
      margin-inline-end 0.125rem
    span&-over-limit
      color transparent
      background-color $RedD
    span:last-child
      word-break break-all

    &::after
      content attr(data-cursor)
      color $Gray112
      display block
      position absolute
      bottom 0.125rem
      right 1.25rem
      z-index 3

  &-bottom
    background $Gray64
    border 1px solid $Gray160
    border-top none
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
    margin-bottom 1rem
    display flex
    justify-content space-between
    align-items center
    padding 0.375rem

    label.checkbox
      display inline-flex
      input
        margin-right 0.375rem

    select
      max-width 9.25rem

  &-length
    display flex
    justify-content flex-start
    align-items center
    span
      display block
      min-width 1.75rem
      margin 0 0.25rem
      text-align right

  &-submit
    display flex
    justify-content flex-start
    align-items center
    width 100%
    button
      font-size 1.375rem
      border-radius 8px
      display block
      width 100%
      padding 1rem

  &-bits
    &-checkbox
      margin-right 0.25rem
    &-string
      width 7rem

.tts-pause-modal-duration input
  max-width 4rem
  margin 0 0.5rem

.tts-pause-control .btn
  padding 0.5rem 1rem

.tts-col-main .tts-player
  flex 1 1 100%
  audio
    width 100%

.tts-main-bottom
  display flex
  justify-content space-between
  align-items center
  button
    padding 1rem
    i
      margin-right 1rem

.tts-clipboard-button
  button&
    padding 0

  &-inner
    border-radius inherit
    padding 1rem
    width 100%
    height 100%

  &[data-success="true"] &-inner
    animation success-flash-bg 1.5s ease-out
    animation-direction normal
    animation-play-state running

@keyframes success-flash-bg
  0%
    background-color rgba(72, 193, 98, 1)
  50%
    background-color rgba(72, 193, 98, 1)
  100%
    background-color rgba(96, 238, 128, 0)
