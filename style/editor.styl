.tts-col-main
  max-width 40rem
  flex 1 1 100%

.tts-header-top
  display flex
  justify-content space-between
  align-items center

.tts-settings
  display none
  &[data-open="true"]
    display block
  &-button
    appearance none
    color $Gray232
    font-size 1.25rem
    background-color $Gray72
    border 2px solid $Gray96
    border-radius 4px
    transition background-color 150ms
    display flex
    justify-content center
    align-items center
    padding 0.5rem
    &:hover
      background-color $Gray96
      border-color $Gray128
    &:active
      background-color $Gray64
  &-char-limit
      display flex
      flex-direction column
      justify-content flex-start
      align-items flex-start

.tts-textarea
  position relative
  &,
  &-container
    max-width 100%

  & textarea,
  &-preview
    border 1px solid $Gray160
    border-radius 0
    border-top-right-radius 4px
    border-top-left-radius 4px
    display inline-block
    appearance textfield
    -moz-default-appearance textarea
    margin-block 1px
    text-rendering optimizeLegibility
    vertical-align text-bottom
    cursor text
    white-space pre-wrap
    word-wrap break-word
    padding 0.25rem
    text-align initial
    text-indent initial
    text-shadow initial
    text-transform initial
    word-spacing initial
    letter-spacing initial
    inset-block-end 0

  textarea
    background transparent
    border-color transparent
    position relative
    max-width 100%
    min-width 100%
    min-height 10rem
    padding 0.25rem
    z-index 3

  &-preview
    color $Gray160
    background $Gray64
    border-bottom-color $Gray128
    display inline-block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 0.25rem
    z-index 2
    span:first-child
      visibility hidden
      margin-inline-end 0.125rem
    span:last-child
      word-break break-all

  &-bottom
    background $Gray64
    border 1px solid $Gray160
    border-top none
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
    margin-bottom 1rem
    display flex
    justify-content space-between
    align-items center
    padding 0.375rem

  &-submit
    display flex
    justify-content flex-start
    align-items center
    width 100%
    button
      font-size 1.375rem
      border-radius 8px
      display block
      width 100%
      padding 1rem

.tts-pause-modal-duration input
  max-width 4rem
  margin 0 0.5rem

.tts-col-main .tts-player
  flex 1 1 100%
  audio
    width 100%

.tts-main-bottom
  display flex
  justify-content space-between
  align-items center
  button
    padding 1rem
    i
      margin-right 1rem

.tts-clipboard-button
  button&
    padding 0

  &-inner
    border-radius inherit
    padding 1rem
    width 100%
    height 100%

  &[data-success="true"] &-inner
    animation success-flash-bg 1.5s ease-out
    animation-direction normal
    animation-play-state running

@keyframes success-flash-bg
  0%
    background-color rgba(72, 193, 98, 1)
  50%
    background-color rgba(72, 193, 98, 1)
  100%
    background-color rgba(96, 238, 128, 0)
