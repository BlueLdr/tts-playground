// override/remove browser defaults for elements

reset-list()
  -webkit-margin-before 0
  -webkit-margin-after 0
  -webkit-margin-start 0
  -webkit-margin-end 0
  -webkit-padding-start 0
  -webkit-padding-end 0
  -moz-margin-start 0
  -moz-padding-end 0
  -moz-padding-start 0
  margin-block-start 0
  margin-block-end 0
  margin-top 0
  margin-bottom 0
  padding-left 0
  list-style none

reset-button()
  appearance none
  border none
  background none
  padding 0

reset-button-full()
  reset-button()
  font-family inherit
  text-align inherit
  align-items unset
  padding 0
