.tts-col-messages
  margin-right 1.5rem
  flex 1 1 25%
  min-width 18rem
  max-width 25rem
  max-height 100%

.tts-message
  &-modal
    min-width 42.5rem
    &-name.row
      align-items flex-end
    &-input
      flex 1 1 30rem
      p
        margin-top 0
      input
        width 100%
      & + button
        padding 0.5625rem 1rem
        flex 0 0 auto

    &-preview
      background-color $Gray64
      border 1px solid $Gray96
      border-radius 4px
      padding 0.5rem
      margin 1rem 0
      max-width 40rem
      word-wrap break-word

    &-player
      display flex
      justify-content flex-start
      align-items center
      width 100%
      .tts-player
        flex 1 1 100%
        audio
          width 100%
      .tts-submit-status
        flex 0 0 2.5rem

    &-details
      display flex
      justify-content space-between
      align-items flex-end
      .row
        color $Gray216
        > :not(:first-child)
          margin-left 1.5rem
        strong
          color $Gray248
      > .btn
        flex 0 0 7rem
        padding 1rem 0
        i
          margin-right 0.625rem
    &-options
      flex 1 1 100%
      h4
        margin-bottom 0.75rem
      .row
        margin-top 0.75rem

    &-export
      margin-top 1.5rem
      &, & .btn
        width -moz-fit-content
        width fit-content

    .modal-footer
      .btn,
      .btn-left,
      .btn-primary,
      .btn-negative
        padding 1rem
        min-width 7rem
      > *:not(:last-child)
        margin-right 1rem
      .tts-clipboard-button
        padding 0


.tts-message
  &-item
    border 1px solid transparent
    display flex
    justify-content space-between
    align-items center
    position relative
    padding 0
    transition background-color 150ms ease

    &, &:nth-child(odd)
      background-color $Gray72
    &:nth-child(even)
      background-color $Gray64
    &:first-child,
    &:first-child &-header
      border-top-right-radius 4px
      border-top-left-radius 4px

    &:last-child,
    &:last-child &-header
      border-bottom-right-radius 4px
      border-bottom-left-radius 4px

    &:nth-child(even)
    &:nth-child(odd)
      &:hover
        background-color $Gray96

    &[data-active="true"]
      background-color $BlueG

    &-header
      display flex
      justify-content space-between
      align-items center
      width 100%
      & > *
        padding 0.5rem 0.75rem

    &-title
      padding 0.5rem 0.75rem
      flex 1 1 100%
      cursor pointer
      white-space nowrap
      text-overflow ellipsis
      overflow hidden

    &-copy
      opacity 0
      transition-property background-color, opacity, color

      &:hover,
      &:focus,
      &:active
        background-color transparent

      .tts-col-messages:focus-within &,
      .tts-col-messages:hover &
        opacity 0.2

    &:focus-within &-copy,
    &:hover &-copy
      opacity 1

    .tts-message-item-controls
      height 100%

